# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_PORT=7770
SECRET_KEY=your-secret-key-change-in-production

# MongoDB Configuration
MONGO_URI=mongodb://mongodb:27017/
MONGO_DB_NAME=godlang

# Groq API Configuration
GROQ_API_KEY=your-groq-api-key-here

# Audio Processing
AUDIO_CHUNK_DURATION=10
AUDIO_SAMPLE_RATE=16000
AUDIO_MAX_RETRIES=3
AUDIO_STABILITY_WAIT=2.0
AUDIO_CLEANUP_INTERVAL=300
AUDIO_FILE_TTL=1800
# AUDIO_TEMP_DIR=/tmp/godlang  # Override default temp directory
# AUDIO_DEVICE=default  # Linux: PulseAudio source, Windows: DirectShow device name